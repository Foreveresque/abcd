
<% unless @rezultat.nil? %>
<% @rezultat.each do |rez| %>
<% unless rez.empty? %>
<% rez.each do |rijec| %>
<%= link_to rijec.word, term_path(rijec) %>
<% end %>
<br/><br/>
<% end %>
<% end %>
<%= @count %>
<b>Vrijeme izvedbe:</b> <%= Time.now - @b %>
<% end %>

<br><br>
<%= form_tag("/terms", :method => "post") do %>
  <%= label_tag(:inp, "Upiši riječ:") %>
  <%= text_field_tag(:inp) %>
  <%= submit_tag("Traži") %>
<% end %>